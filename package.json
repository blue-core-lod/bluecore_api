{
  "name": "sinopia_api",
  "version": "0.1.0",
  "description": "API for persisting resources in the Sinopia framework.",
  "main": "src/server.js",
  "license": "Apache-2.0",
  "homepage": "https://github.com/LD4P/sinopia_api",
  "repository": "github:LD4P/sinopia_api",
  "scripts": {
    "dev-start": "nodemon src/server.js",
    "start": "node src/server.js",
    "eslint": "eslint --color -c .eslintrc.yml --ext js .",
    "eslint-fix": "eslint --color -c .eslintrc.yml --ext js --fix .",
    "test": "jest --colors --coverage --silent --runInBand",
    "test-verbose": "jest --colors --runInBand",
    "ci": "npm run eslint && npm run test"
  },
  "type": "module",
  "dependencies": {
    "@rdfjs/parser-jsonld": "^1.2.1",
    "aws-sdk": "^2.804.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "helmet": "^4.2.0",
    "honeybadger": "^1.4.0",
    "jwks-rsa": "^1.11.0",
    "lodash": "^4.17.20",
    "monk": "^7.3.1",
    "n3": "^1.6.4",
    "rdf-ext": "^1.3.0",
    "redoc-cli": "^0.9.13",
    "superagent": "^6.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/node": "^7.12.6",
    "@babel/preset-env": "^7.12.7",
    "babel-jest": "^26.6.3",
    "eslint": "^7.15.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "openapi-enforcer-cli": "^0.3.6",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "setupFiles": [
      "<rootDir>/jest.envVars.js"
    ],
    "clearMocks": true
  }
}
